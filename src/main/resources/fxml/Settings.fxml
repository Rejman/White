<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane fx:id="mainPane" style="-fx-background-color: red;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.SettingsController">
   <children>
      <HBox fx:id="container">
         <children>
            <ScrollPane>
               <content>
                  <VBox>
                     <children>
                        <Label text="Settings" />
                        <TreeView fx:id="menuTreeView" showRoot="false" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
               </content>
            </ScrollPane>
            <Pane fx:id="containerPane" style="-fx-background-color: green;" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </children>
</Pane>
