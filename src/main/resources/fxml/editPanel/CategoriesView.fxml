<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.editPanel.CategoriesViewController">
   <children>
      <HBox fx:id="hBox">
         <children>
            <VBox fx:id="editPanel" alignment="TOP_RIGHT" disable="true" spacing="5.0" HBox.hgrow="ALWAYS">
               <children>
                  <TextField fx:id="nameTextField" promptText="name" VBox.vgrow="ALWAYS" />
                  <ColorPicker fx:id="colorPicker" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" VBox.vgrow="ALWAYS" />
                  <Button fx:id="updateButton" disable="true" mnemonicParsing="false" onAction="#update" text="Save" />
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </children>
</StackPane>
