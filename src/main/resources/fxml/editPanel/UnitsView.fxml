<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.editPanel.UnitsViewController">
   <children>
      <HBox fx:id="hBox">
         <children>
            <VBox fx:id="editPanel" alignment="TOP_RIGHT" disable="true" spacing="5.0">
               <children>
                  <TextField fx:id="nameTextField" promptText="name" />
                  <TextField fx:id="shortcutTextField" promptText="shortcut" />
                  <CheckBox fx:id="realNumberCheckBox" mnemonicParsing="false" text="real number" />
                  <Button fx:id="updateButton" disable="true" mnemonicParsing="false" onAction="#update" styleClass="primary" text="Save" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </children>
</StackPane>
